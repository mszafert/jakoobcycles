---
interface Props {
  title?: string;
}

const { title = "Jakoobcycles" } = Astro.props;
import bgImg from '../assets/img/bg-home-01.webp';
import PageHeader from '../components/PageHeader.astro';
import PageFooter from '../components/PageFooter.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="content">
      <PageHeader />
      <main class="flex-1 p-10">
        <div class="max-w-[1620px] mx-auto">
          <slot />
        </div>
      </main>
      <PageFooter />
    </div>
  </body>
</html>

<style define:vars={{ bgImg: `url(${bgImg.src})` }}>
  .content {
    @apply bg-(black center cover no-repeat) flex flex-col gap-10 h-screen overflow-hidden text-zinc-400;
    background-image: var(--bgImg);
  }
</style>